<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:controller="pl.kuklinski.clientsManagement.controllers.SearchController" alignment="TOP_CENTER"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="418.0"
      prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label alignment="CENTER" text="%instruction.search" textAlignment="CENTER" wrapText="true">
           <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <ComboBox fx:id="credytTypeComboBox" prefHeight="26.0" prefWidth="210.0"
                          promptText="%chooseCreditType.search"/>
            </children>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Label text="%path"/>
                <Label fx:id="directoryPath" textOverrun="LEADING_ELLIPSIS"/>
            </children>
            <VBox.margin>
                <Insets left="40.0" right="10.0"/>
            </VBox.margin>
        </HBox>
        <Button mnemonicParsing="false" onAction="#chooseFolder" text="%chooseDirectory.button"/>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0" spacing="20.0">
            <children>
                <CheckBox fx:id="createTxtCheckbox" mnemonicParsing="false" text="%createTxt.search"/>
                <CheckBox fx:id="addToDbCheckbox" mnemonicParsing="false" text="%importToDB.search"/>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER" prefHeight="61.0" prefWidth="600.0" spacing="20.0">
            <children>
                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchCredits" text="%search.button"/>
            </children>
        </HBox>
    </children>
</VBox>
